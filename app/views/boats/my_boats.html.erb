<h1 class="text-center mt-2 mb-4"><%= current_user.username.capitalize %>'s Boats</h1>

<br>

<p style="text-align:center; width: 500px; margin: auto;" >Hello <%= "#{current_user.username.capitalize}" %>, these are the boats that you inserted so far. Your account is active, that means that all your boats are rentable. </p>
<br><br>

<div class="container">
  <div class="cards-grid">
    <% @my_boats.each do |boat| %>
        <%= link_to(boat_path(boat)) do %>
        <div class="card-boat">
          <img src="https://images.unsplash.com/photo-1576638994386-8bce04e2f4cb?  ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=651&q=80"/>
          <div class="card-boat-infos">
            <div>
              <h2><%= boat.name %></h2>
              <p><%= boat.description %></p>
            </div>
            <h4>â‚¬<%= boat.price %>/day</h4>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
  <br>

 <div class="d-flex">
  <div id="map"
     style="width: 100%; height: 300px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>

